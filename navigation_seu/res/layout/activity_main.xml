<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/startxh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/startxh" />

    <ImageButton
        android:id="@+id/startbtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/startbtn3"
        android:layout_toRightOf="@+id/startbtn3"
        android:background="@android:color/transparent"
        android:src="@drawable/startbtn4" />

    <ImageButton
        android:id="@+id/startbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startbtn1"
        android:layout_toLeftOf="@+id/startbtn2"
        android:background="@android:color/transparent"
        android:src="@drawable/startbtn3" />

    <ImageButton
        android:id="@+id/startbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/startbtn2"
        android:layout_toLeftOf="@+id/startbtn2"
        android:background="@android:color/transparent"
        android:src="@drawable/startbtn1" />

    <ImageButton
        android:id="@+id/startbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startxh"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="68dp"
        android:background="@android:color/transparent"
        android:src="@drawable/startbtn2" />

    <ImageButton
        android:id="@+id/startbtn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/startbtn5" />

    <ImageButton
        android:id="@+id/startbtn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startbtn5"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:src="@drawable/startbtn6" />

</RelativeLayout>